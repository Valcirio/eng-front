generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Products {
  id       String     @id @default(uuid())
  title    String
  Comments Comments[]
}

model Comments {
  id        Int      @id @default(autoincrement())
  name      String?
  comment   String
  star      Decimal
  Product   Products @relation(fields: [productId], references: [id])
  productId String
}
